<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/fragment_toolbar_settings"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-6dp"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp">

                        <LinearLayout
                            android:background="@android:color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <com.maxcriser.emergencycalls.view.labels.TextViewRobotoMedium
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="16dp"
                                android:layout_marginBottom="16dp"
                                android:text="@string/popular"
                                android:textColor="@color/text_toolbar"
                                android:textSize="14sp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:minHeight="48dp"
                                android:onClick="onHowMakeCallClicked"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_marginStart="8dp"
                                    android:padding="8dp"
                                    android:src="@drawable/file_document_box"
                                    android:layout_marginLeft="8dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="8dp"
                                    android:padding="8dp"
                                    android:text="@string/how_to_make_a_call_to_the_rescue_service"
                                    android:textColor="@android:color/black"
                                    android:textSize="16sp"
                                    android:layout_marginRight="8dp"/>
                            </LinearLayout>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginStart="48dp"
                                android:background="#dadada"
                                android:layout_marginLeft="48dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:minHeight="48dp"
                                android:onClick="onSendingClicked"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_marginStart="8dp"
                                    android:padding="8dp"
                                    android:src="@drawable/file_document_box"
                                    android:layout_marginLeft="8dp"/>

                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="8dp"
                                    android:padding="8dp"
                                    android:text="@string/sending_a_message"
                                    android:textColor="@android:color/black"
                                    android:textSize="16sp"
                                    android:layout_marginRight="8dp"/>
                            </LinearLayout>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginStart="48dp"
                                android:background="#dadada"
                                android:layout_marginLeft="48dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:minHeight="48dp"
                                android:onClick="onAttachClicked"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_marginStart="8dp"
                                    android:padding="8dp"
                                    android:src="@drawable/file_document_box"
                                    android:layout_marginLeft="8dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="8dp"
                                    android:padding="8dp"
                                    android:text="@string/attaching_coordinates_to_a_message"
                                    android:textColor="@android:color/black"
                                    android:textSize="16sp"
                                    android:layout_marginRight="8dp"/>

                            </LinearLayout>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginStart="48dp"
                                android:background="#dadada"
                                android:layout_marginLeft="48dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:minHeight="48dp"
                                android:onClick="onPossibleClicked"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_marginStart="8dp"
                                    android:padding="8dp"
                                    android:src="@drawable/file_document_box"
                                    android:layout_marginLeft="8dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="8dp"
                                    android:padding="8dp"
                                    android:text="@string/possible_problems_with_determining_your_current_location"
                                    android:textColor="@android:color/black"
                                    android:textSize="16sp"
                                    android:layout_marginRight="8dp"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="#dadada"/>

                            <com.maxcriser.emergencycalls.view.labels.TextViewRobotoMedium
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:gravity="center|start"
                                android:onClick="onBrowseClicked"
                                android:paddingStart="20dp"
                                android:text="@string/browse_all_articles"
                                android:textColor="#3e87ee"
                                android:textSize="16sp"
                                android:paddingLeft="20dp"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="8dp">

                        <LinearLayout
                            android:background="@android:color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="2dp"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:minHeight="48dp"
                            android:onClick="onFeedbackClicked"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginStart="8dp"
                                android:padding="8dp"
                                android:src="@drawable/ic_announcement_black_24dp"
                                android:layout_marginLeft="8dp"/>

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="8dp"
                                android:padding="8dp"
                                android:text="@string/send_feedback"
                                android:textColor="@android:color/black"
                                android:textSize="16sp"
                                android:layout_marginRight="8dp"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </FrameLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>